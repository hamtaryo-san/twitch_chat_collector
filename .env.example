# Twitch API認証情報
# https://dev.twitch.tv/console/apps でアプリケーションを作成してください

# Twitch Client ID
TWITCH_CLIENT_ID=your_client_id_here

# Twitch Client Secret
TWITCH_CLIENT_SECRET=your_client_secret_here

# Twitch User Access Token (IRC用)
# OAuth認証フローで取得する必要があります
# 必要なスコープ: chat:read
TWITCH_ACCESS_TOKEN=your_user_access_token_here

# データベース設定
DATABASE_URL=sqlite:///twitch_chats.db

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=collector.log

# 再接続設定
RECONNECT_INTERVAL=5
MAX_RECONNECT_ATTEMPTS=10
